{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/common/*": ["common/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/types/*": ["types/*"],
      "@/API/*": ["API/*"], 
      "@/API": ["API/index"], 
      "@/hooks/*": ["hooks/*"],
      "@/screens/*": ["screens/*"],
      "@/stores/*": ["stores/*"],
      "@/styles/*": ["styles/*"],
      "@/mock/*": ["mock/*"],
      "@/lib/*": ["lib/*"],
      "@/design/*": ["design/*"]
    },
  },  
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
